{% extends 'base.html.twig' %}
{% set content_max_width = '500px' %}
{% block title %}Iniciar sesión | TalentoDev{% endblock %}

{% block body %}
<br><br>
<div class="card auth-card mt-4">
  <div class="auth-header">
    <div class="brand-mark">
      <svg width="24" height="24" viewBox="0 0 24 24" aria-hidden="true">
        <rect x="2" y="2" width="20" height="20" rx="6" fill="#226aff" opacity="0.15"/>
        <path d="M6 12h12M6 8h12M6 16h8" stroke="#226aff" stroke-width="1.5" stroke-linecap="round"/>
      </svg>
    </div>
    <h1 class="h4 mb-1">Iniciar sesión</h1>
    <p class="auth-subtle mb-0">Accedé con tu email y contraseña para continuar.</p>
  </div>

  <div class="p-4">
    {# Mensaje de error opcional (mock / security) #}
    {% if error is defined and error %}
      <div class="alert alert-danger small" role="alert">
        {{ error.messageKey|default('Credenciales inválidas')|trans(error.messageData|default({}), 'security') }}
      </div>
    {% endif %}

    <form method="post" action="{{ path('login') }}" novalidate>
      <div class="form-floating mb-3">
        <input type="email"
               class="form-control"
               id="email"
               name="email"
               placeholder="nombre@correo.com"
               value="{{ last_username|default('') }}"
               autocomplete="email"
               required autofocus>
        <label for="email">Email</label>
      </div>

      <div class="form-floating mb-2">
        <input type="password"
               class="form-control"
               id="password"
               name="password"
               placeholder="••••••••"
               autocomplete="current-password"
               required>
        <label for="password">Contraseña</label>
      </div>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="_remember_me" name="_remember_me" value="on">
          <label class="form-check-label small" for="_remember_me">Recordarme</label>
        </div>
        <a href="{{ path('restablecer_contraseña') }}" class="small text-decoration-none">¿Olvidaste tu contraseña?</a>
      </div>

      <button type="submit" class="btn btn-primary w-100">Ingresar</button>
    </form>
  </div>
</div>

<div class="text-center mt-3">
  <span class="small text-muted">¿No tenés cuenta?</span>
  <a href="{{ path('register') }}" class="ms-1">Registrate</a>
</div>
{% endblock %}

{% block javascripts %}
  <script>
   
  </script>
{% endblock %}
