            font-size: 1.08rem;
        }
        .hero .btn {
            font-size: 1rem;
            padding-inline: 1.25rem;
        }

        /* Module cards */
        .module-card {
            border: none;
            border-radius: var(--td-radius-md);
            box-shadow: var(--td-shadow-sm);
            background: var(--td-surface);
            transition: transform .12s ease-out, box-shadow .12s ease-out, background .12s ease-out;
