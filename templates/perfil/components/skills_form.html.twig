
{# Componente edición de skills (estilo moderno) #}
<div class="mb-4">
    <div class="d-flex align-items-center justify-content-between">
        <label class="form-label fw-semibold mb-0"><i class="bi bi-stars me-1"></i> Skills</label>
        {# Actualizar CSV #}
        {# <form method="post" action="{{ path('skill_update', {'username': username}) }}" class="d-flex gap-2">
            <input type="text" class="form-control form-control-sm" name="skills" value="{{ skills|join(', ') }}" placeholder="PHP, Symfony, MySQL">
            <button class="btn btn-sm btn-outline-primary" type="submit"><i class="bi bi-save"></i></button>
        </form> #}
    </div>

    {# Chips existentes #}
    <div class="d-flex flex-wrap gap-2 mt-3">
        {% for s in skills %}
            <form method="post" action="{{ path('skill_remove', {'username': username, 'skill': s}) }}" class="d-inline">
                <button class="btn btn-sm skill-chip d-flex align-items-center gap-1 mb-1" type="submit">
                    <span>{{ s }}</span><i class="bi bi-x-circle-fill small"></i>
                </button>
            </form>
        {% else %}
            <span class="text-muted small">Sin skills registradas. Añadí una abajo.</span>
        {% endfor %}
    </div>

    {# Añadir nueva #}
    <form method="post" action="{{ path('skill_add', {'username': username}) }}" class="d-flex gap-2 mt-3">
        <input type="text" class="form-control form-control-sm" name="skill" placeholder="Nueva skill (ej: Docker)">
        <button class="btn btn-sm btn-outline-success" type="submit"><i class="bi bi-plus-circle"></i> Agregar</button>
    </form>
</div>
