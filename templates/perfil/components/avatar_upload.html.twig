{# Form independiente para subir avatar #}
<form method="post" action="{{ path('perfil_upload_avatar', {'username': username}) }}" enctype="multipart/form-data" class="card p-3 shadow-sm">
    <div class="d-flex align-items-center">
        <img src="{{ avatar_url|default('/assets/avatar-placeholder.svg') }}" class="rounded-circle me-3"
             style="width:64px;height:64px;object-fit:cover;" alt="Avatar actual">
        <div class="flex-grow-1">
            <div class="form-text mb-1">Imagen cuadrada recomendada (â‰¥ 256Ã—256)</div>
            <input class="form-control form-control-sm" type="file" name="avatar" accept="image/*">
        </div>
        <div class="ms-2">
            <button class="btn btn-sm btn-outline-primary" type="submit">Subir</button>
        </div>
    </div>
</form>
