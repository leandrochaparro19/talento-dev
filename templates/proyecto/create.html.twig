{# templates/proyecto/new.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Publicar proyecto | TalentoDev{% endblock %}

{# ------------------------------------------------------------------ #}
{% block stylesheets %}
  {{ parent() }}
  <link href="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/css/tom-select.bootstrap5.css" rel="stylesheet">
{% endblock %}

{# ------------------------------------------------------------------ #}
{% block body %}
<div class="mb-4 d-flex align-items-center gap-3">
  <i class="bi bi-rocket-takeoff fs-2 text-primary"></i>
  <div>
    <h2 class="mb-1">Publicar proyecto</h2>
    <div class="text-muted small">Completá los datos, definí requisitos y elegí el estado inicial.</div>
  </div>
</div>

<form method="post" class="card border-0 shadow-lg p-4 p-md-5">
  <div class="row g-4 g-lg-5">

    {# ───────────────────────────── IZQUIERDA ──────────────────────── #}
    <div class="col-12 col-lg-7">
      <h3 class="h5 text-primary fw-bold mb-4">Detalles del Proyecto</h3>

      <div class="mb-3">
        <label for="titulo" class="form-label">Título <span class="text-danger">*</span></label>
        <input type="text" id="titulo" name="titulo" class="form-control form-control-lg" required
               value="{{ defaults.titulo|default('') }}" maxlength="80"
               placeholder="Ej: Plataforma de reservas online" autofocus>
      </div>

      <div class="mb-3">
        <label for="descripcion" class="form-label">Descripción <span class="text-danger">*</span></label>
        <textarea id="descripcion" name="descripcion" class="form-control" rows="5" required
                  maxlength="1200"
                  placeholder="Resumen, funcionalidades clave y objetivo del proyecto…"
                  oninput="document.getElementById('desc-count').innerText=this.value.length+'/1200';">{{ defaults.descripcion|default('') }}</textarea>
        <div class="form-text text-end small">
          <span id="desc-count">{{ defaults.descripcion|default('')|length }}/1200</span>
        </div>
      </div>

      <hr class="my-4">

      {# -------------------- LISTA DINÁMICA ALCANCE ------------------ #}
      <div class="mb-3">
        <label class="form-label fw-semibold text-dark">Requisitos y alcance</label>

        {% set alcanceItems =
          defaults.alcance_items is defined ? defaults.alcance_items :
          (defaults.alcance is defined
            ? (defaults.alcance is iterable ? defaults.alcance : (defaults.alcance ? [defaults.alcance] : []))
            : []
          )
        %}

        <div id="alcance-list" class="list-group">
          {% if alcanceItems|length > 0 %}
            {% for item in alcanceItems %}
              <div class="list-group-item d-flex align-items-start gap-2 alcance-item">
                <i class="bi bi-check2-circle mt-2 text-success"></i>
                <input type="text" name="alcance[]" class="form-control" value="{{ item }}"
                       placeholder="Ej.: Entregar documentación técnica completa">
                <div class="btn-group ms-2">
                  <button class="btn btn-sm btn-outline-secondary move-up"   type="button" title="Subir"><i class="bi bi-arrow-up"></i></button>
                  <button class="btn btn-sm btn-outline-secondary move-down" type="button" title="Bajar"><i class="bi bi-arrow-down"></i></button>
                  <button class="btn btn-sm btn-outline-danger remove-item"  type="button" title="Quitar"><i class="bi bi-x-lg"></i></button>
                </div>
              </div>
            {% endfor %}
          {% else %}
              <div class="list-group-item d-flex align-items-start gap-2 alcance-item">
                <i class="bi bi-check2-circle mt-2 text-success"></i>
                <input type="text" name="alcance[]" class="form-control"
                       placeholder="Ej.: Reunión de kick-off y plan de hitos">
                <div class="btn-group ms-2">
                  <button class="btn btn-sm btn-outline-secondary move-up"   type="button" title="Subir"><i class="bi bi-arrow-up"></i></button>
                  <button class="btn btn-sm btn-outline-secondary move-down" type="button" title="Bajar"><i class="bi bi-arrow-down"></i></button>
                  <button class="btn btn-sm btn-outline-danger remove-item"  type="button" title="Quitar"><i class="bi bi-x-lg"></i></button>
                </div>
              </div>
          {% endif %}
        </div>

        <div class="d-flex justify-content-end mt-2">
          <button type="button" id="add-alcance" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-plus-lg me-1"></i> Agregar ítem
          </button>
        </div>

        <template id="tpl-alcance-item">
          <div class="list-group-item d-flex align-items-start gap-2 alcance-item">
            <i class="bi bi-check2-circle mt-2 text-success"></i>
            <input type="text" name="alcance[]" class="form-control"
                   placeholder="Ej.: Criterios de aceptación de la entrega 1">
            <div class="btn-group ms-2">
              <button class="btn btn-sm btn-outline-secondary move-up"   type="button" title="Subir"><i class="bi bi-arrow-up"></i></button>
              <button class="btn btn-sm btn-outline-secondary move-down" type="button" title="Bajar"><i class="bi bi-arrow-down"></i></button>
              <button class="btn btn-sm btn-outline-danger remove-item"  type="button" title="Quitar"><i class="bi bi-x-lg"></i></button>
            </div>
          </div>
        </template>

        <div class="form-text">
          <i class="bi bi-info-circle me-1"></i> Agregá tantos ítems como necesites; podés reordenarlos o quitarlos.
        </div>
      </div>

      {# -------------------- SELECT TECNOLOGÍAS ---------------------- #}
      <div class="mb-3">
        <label for="select-tecnologias-new" class="form-label fw-semibold text-dark">
          Tecnologías requeridas <span class="text-danger">*</span>
        </label>

        {# Usamos el mismo componente que en “edit”. Solo cambia el id. #}
        {% include 'proyecto/components/tecnologias_select.html.twig' with {
          id: 'select-tecnologias',
          name: 'tecnologias[]',
          selected:  defaults.tecnologias|default([]),
        } %}
      </div>
    </div>

    {# ───────────────────────────── DERECHA ───────────────────────── #}
    <div class="col-12 col-lg-5">
      <h3 class="h5 text-primary fw-bold mb-4">Condiciones y Estado</h3>

      <div class="mb-3">
        <label for="presupuesto" class="form-label">Presupuesto ($) <span class="text-danger">*</span></label>
        <input type="number" id="presupuesto" name="presupuesto" class="form-control" min="0" required
               value="{{ defaults.presupuesto|default('') }}" placeholder="Monto estimado">
      </div>

      <div class="mb-3">
        <label for="plazo" class="form-label">Plazo estimado (días) <span class="text-danger">*</span></label>
        <input type="number" id="plazo" name="plazo" class="form-control" min="1" required
               value="{{ defaults.plazo|default('') }}" placeholder="Duración aproximada">
        <div class="form-text small">
          Costo/día aprox.: <span class="fw-semibold" id="costo-dia">—</span>
        </div>
      </div>

      <div class="mb-3">
        <label for="estado-inicial" class="form-label">Estado inicial <span class="text-danger">*</span></label>
        <div class="input-group">
          {% set estInit = defaults.estado|default('Borrador') %}
          <select name="estado" id="estado-inicial" class="form-select" aria-label="Estado inicial">
            {% for e in ['Borrador','Publicado','Pausado','Finalizado'] %}
              <option value="{{ e }}" {{ estInit == e ? 'selected' }}>{{ e }}</option>
            {% endfor %}
          </select>
          {% set badgeCls =
            estInit == 'Publicado'  ? 'bg-success' :
            estInit == 'Pausado'    ? 'bg-warning text-dark' :
            estInit == 'Finalizado' ? 'bg-info text-dark' :
                                      'bg-secondary' %}
          <span class="input-group-text bg-transparent border-0 ps-2">
            <span id="badge-estado-new" class="badge {{ badgeCls }}">{{ estInit }}</span>
          </span>
        </div>
      </div>
    </div>

  </div>

  {# ------------------------- BOTONERA ------------------------------ #}
  <div class="border-top pt-3 mt-4 d-flex flex-column flex-sm-row gap-2">
    <button class="btn btn-outline-primary" type="submit" name="action" value="draft">
      <i class="bi bi-file-earmark-text me-1"></i> Guardar borrador
    </button>
    <button class="btn btn-primary" type="submit" name="action" value="publish">
      <i class="bi bi-rocket-takeoff me-1"></i> Publicar ahora
    </button>
    <a href="{{ path('proyecto_index') }}" class="btn btn-outline-secondary ms-sm-auto">Cancelar</a>
  </div>
</form>
{% endblock %}

{# ------------------------------------------------------------------ #}
{% block javascripts %}
  {{ parent() }}
  <script src="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/js/tom-select.complete.min.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // TomSelect para tecnologías
      const tsEl = document.getElementById('select-tecnologias');
      if (tsEl) {
        new TomSelect('#select-tecnologias', { plugins:['remove_button'], create:false, persist:false });
      }

      // Badge dinámico para el estado
      const estado = document.getElementById('estado');
      const badge  = document.getElementById('badge-estado');
      const badgeMap = {
        'Publicado':'bg-success',
        'Pausado':'bg-warning text-dark',
        'Finalizado':'bg-info text-dark',
        'Borrador':'bg-secondary'
      };
      if (estado && badge) {
        estado.addEventListener('change', function(){
          badge.className = 'badge ' + (badgeMap[this.value] || 'bg-secondary');
          badge.textContent = this.value;
        });
      }

      // Lista dinámica: alcance
      const list = document.getElementById('alcance-list');
      const tpl  = document.getElementById('tpl-alcance-item');
      const addBtn = document.getElementById('add-alcance');

      function attachHandlers(item){
        item.querySelector('.remove-item')?.addEventListener('click', () => item.remove());
        item.querySelector('.move-up')?.addEventListener('click', () => {
          if (item.previousElementSibling) item.parentNode.insertBefore(item, item.previousElementSibling);
        });
        item.querySelector('.move-down')?.addEventListener('click', () => {
          if (item.nextElementSibling) item.parentNode.insertBefore(item.nextElementSibling, item);
        });
        item.querySelector('input')?.addEventListener('keydown', (e) => {
          if (e.key === 'Enter') { e.preventDefault(); addItem(); }
        });
      }

      function addItem(value=''){
        const node = tpl.content.firstElementChild.cloneNode(true);
        const input = node.querySelector('input');
        if (value) input.value = value;
        list.appendChild(node);
        attachHandlers(node);
        input.focus();
      }

      // Handlers para existentes
      list.querySelectorAll('.alcance-item').forEach(attachHandlers);
      addBtn?.addEventListener('click', () => addItem());
    });
  </script>
{% endblock %}

